<%# Barra de información / navegación (componente reutilizable) %>
<%= render 'shared/view_header', title: "Editar Visita" do %>
  <%= link_to visits_path, class: "btn btn-secondary" do %>
    <i class="bi bi-x-circle me-2"></i> Cancelar
  <% end %>
<% end %>

<%# Espacio vacío (componente reutilizable) %>
<div class="view-spacing"></div>

<%# Formulario de visita %>
<div class="row justify-content-center">
  <div class="col-12 col-lg-8">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-calendar-check me-2"></i>Información de la Visita</h5>
      </div>
      <div class="card-body p-4">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
