<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm mt-5">
        <div class="card-body p-5">
          <h2 class="card-title text-center mb-4">Crear Cuenta de Compañía</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= label_tag "user[company_name]", "Nombre de la Compañía", class: "form-label" %>
              <%= text_field_tag "user[company_name]", 
                  "", 
                  class: "form-control", 
                  required: true,
                  placeholder: "Nombre de su compañía" %>
              <div class="invalid-feedback">
                Por favor ingrese el nombre de la compañía.
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :name, "Nombre del Usuario", class: "form-label" %>
              <%= f.text_field :name, 
                  class: "form-control", 
                  required: true,
                  autofocus: true,
                  placeholder: "Su nombre completo" %>
              <div class="invalid-feedback">
                Por favor ingrese su nombre.
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :email, "Correo Electrónico", class: "form-label" %>
              <%= f.email_field :email, 
                  class: "form-control", 
                  required: true,
                  autocomplete: "email",
                  placeholder: "correo@ejemplo.com" %>
              <div class="invalid-feedback">
                Por favor ingrese un correo válido.
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Contraseña", class: "form-label" %>
              <% if @minimum_password_length %>
                <em class="text-muted">(<%= @minimum_password_length %> caracteres mínimo)</em>
              <% end %>
              <%= f.password_field :password, 
                  class: "form-control", 
                  required: true,
                  autocomplete: "new-password",
                  placeholder: "Mínimo 6 caracteres" %>
              <div class="invalid-feedback">
                Por favor ingrese una contraseña.
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :password_confirmation, "Confirmar Contraseña", class: "form-label" %>
              <%= f.password_field :password_confirmation, 
                  class: "form-control", 
                  required: true,
                  autocomplete: "new-password",
                  placeholder: "Confirme su contraseña" %>
              <div class="invalid-feedback">
                Las contraseñas no coinciden.
              </div>
            </div>

            <div class="d-grid">
              <%= f.submit "Crear Cuenta", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Validación de formulario con Bootstrap
  (function() {
    'use strict';
    var forms = document.querySelectorAll('.needs-validation');
    Array.prototype.slice.call(forms).forEach(function(form) {
      form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>
