<%# Barra de información / navegación (componente reutilizable) %>
<%= render 'shared/view_header', title: (@product_family.persisted? ? "Editar Familia de Productos" : "Nueva Familia de Productos") do %>
  <button type="submit" form="product-family-form" class="btn btn-primary">
    <i class="bi bi-check-circle me-2"></i> Guardar
  </button>
  <%= link_to product_families_path, class: "btn btn-secondary" do %>
    <i class="bi bi-x-circle me-2"></i> Cancelar
  <% end %>
<% end %>

<%# Espacio vacío (componente reutilizable) %>
<div class="view-spacing"></div>

<%# Formulario de familia de productos %>
<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-6">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <%= form_with model: @product_family, url: (@product_family.persisted? ? product_family_path(@product_family) : product_families_path), 
            method: (@product_family.persisted? ? :patch : :post),
            local: true,
            id: "product-family-form" do |f| %>
          
          <% if @product_family.errors.any? %>
            <div class="alert alert-danger">
              <h6 class="alert-heading">Por favor corrige los siguientes errores:</h6>
              <ul class="mb-0">
                <% @product_family.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <% if flash[:alert] %>
            <div class="alert alert-danger">
              <%= flash[:alert] %>
            </div>
          <% end %>
          
          <div class="mb-3">
            <%= f.label :name, "Nombre", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", required: true, autofocus: true, placeholder: "Ej: Bebidas, Snacks, Lácteos" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
