<%# Barra de información / navegación (componente reutilizable) %>
<%= render 'shared/view_header', title: "Configuración" do %>
<% end %>

<%# Espacio vacío (componente reutilizable) %>
<div class="view-spacing"></div>

<%# Contenido con tabs %>
<div class="row">
  <div class="col-12">
    <div class="card shadow-sm">
      <div class="card-body">
        <%# Nav tabs %>
        <ul class="nav nav-tabs mb-4" id="settingsTabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">
              General
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="parameters-tab" data-bs-toggle="tab" data-bs-target="#parameters" type="button" role="tab" aria-controls="parameters" aria-selected="false">
              Parámetros
            </button>
          </li>
        </ul>
        
        <%# Tab content %>
        <div class="tab-content" id="settingsTabsContent">
          <%# Tab General %>
          <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
            <div class="row">
              <div class="col-12 col-md-6">
                <div class="mb-3">
                  <label class="form-label fw-bold">Nombre de la Compañía</label>
                  <p class="form-control-plaintext"><%= @company.name %></p>
                </div>
              </div>
              <div class="col-12 col-md-6">
                <div class="mb-3">
                  <label class="form-label fw-bold">ID de la Compañía</label>
                  <p class="form-control-plaintext"><%= @company.id %></p>
                </div>
              </div>
            </div>
          </div>
          
          <%# Tab Parámetros %>
          <div class="tab-pane fade" id="parameters" role="tabpanel" aria-labelledby="parameters-tab">
            <p class="text-muted">Contenido de parámetros próximamente...</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
